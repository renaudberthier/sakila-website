{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ActorId</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>LastUpdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.actorId }}</td>
                <td>{{ actor.firstName }}</td>
                <td>{{ actor.lastName }}</td>
                <td>{{ actor.lastUpdate ? actor.lastUpdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_actor_show', {'actorId': actor.actorId}) }}">show</a>
                    <a href="{{ path('app_actor_edit', {'actorId': actor.actorId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actor_new') }}">Create new</a>
{% endblock %}
